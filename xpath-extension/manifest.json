{
  "manifest_version": 3,
  "name": "Smart XPath (per element)",
  "version": "1.1",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "xpath.js"]
    }
  ]
}
